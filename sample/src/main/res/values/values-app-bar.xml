<?xml version="1.0" encoding="utf-8"?>
<resources>

    <item name="app_bar" type="id" />

    <dimen name="app_bar_shadow_height">@dimen/shadow_height</dimen>

    <color name="app_bar_shadow_start_color">@color/shadow_start_color</color>
    <color name="app_bar_shadow_end_color">@color/shadow_end_color</color>
    <color name="app_bar_title_text_color">@color/colorWhite</color>

    <style name="AppBarRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppBarContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:id">@id/app_bar</item>
    </style>

    <style name="AppBarShadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/app_bar_shadow_height</item>
        <item name="android:background">@drawable/bg_app_bar_shadow</item>
    </style>

    <style name="AppBarIcon">
        <item name="android:layout_width">?android:attr/actionBarSize</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="AppBarTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/app_bar_title_text_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
    </style>

</resources>